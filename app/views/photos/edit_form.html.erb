<h1>Editing photo #<%= @photo.id %></h1>
<form action="/update_photo/<%= @photo.id %>">
  <div class="form-group">
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" class="form-control" type="text" name="the_caption" value="<%= @photo.caption %>">
  </div>
  <div class="form-group">
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" class="form-control" type="text" name="the_source" value="<%= @photo.source %>">
  </div>
  <div class="form-group">
    <input class="btn btn-default" type="submit" value="Update photo">
  </div>
</form>

