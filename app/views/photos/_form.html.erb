<% if @photo.errors %>
  <ul>
    <% @photo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for(@photo) do |f| %>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_field :caption, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :source %>
    <%= f.text_field :source, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>

