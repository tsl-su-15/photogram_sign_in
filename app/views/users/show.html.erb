<!-- Responsive panel example-->

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">User #<%= @user.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Email</dt>
              <dd><%= @user.email %></dd>

              <dt>Image</dt>
              <dd><img width="300px" src="<%= @user.image_url %>"></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to users_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <% if current_user.id == @user.id %>
                <%= link_to edit_user_url(@user.id), :class => "btn btn-warning" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to user_url(@user.id), :method => "delete", :data => { :confirm => "Do you really want to delete this user?" }, :class => "btn btn-danger" do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <% @user.photos.each do |photo| %>
        <div class="col-md-3">
          <%= link_to photo_path(photo.id), :class => "thumbnail" do %>
            <%= image_tag(photo.source, :class => 'img-responsive') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
